name: Run Python script every 5 minutes

on:
  schedule:
    - cron: "*/5 * * * *"  # S'exécute toutes les 5 minutes
  workflow_dispatch:  # Pour pouvoir exécuter manuellement la tâche aussi

jobs:
  run_script:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.x'  # Tu peux spécifier la version que tu utilises

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt  # Installe les dépendances si tu en as un fichier requirements.txt

      - name: Run script
        run: |
          conda activate test_env  # Si tu veux utiliser ton environnement conda
          python chemin/vers/ton/script.py  # Remplace par le chemin de ton script
